{
    "name": "vscode-inputstream",
    "displayName": "vscode-inputstream",
    "description": "Streamlined developer publishing",
    "version": "0.8.1",
    "publisher": "stackbuild",
    "license": "Apache-2.0",
    "icon": "stackb-full.png",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/input-stream/vscode-inputstream.git"
    },
    "keywords": [
        "blogging",
        "blog",
        "publishing",
        "writing",
        "vscode"
    ],
    "author": "stack.build authors",
    "bugs": {
        "url": "https://github.com/input-stream/vscode-inputstream/issues"
    },
    "homepage": "https://github.com/input-stream/vscode-inputstream#readme",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:input.stream.deviceLogin",
        "onCommand:input.stream.login",
        "onFileSystem:stream",
        "onUri",
        "onView:input.stream.accountExplorer",
        "onView:input.stream.inputExplorer"
    ],
    "engines": {
        "vscode": "^1.74.0"
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "inputstream",
            "properties": {
                "input.stream.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Flag to enable/disable this feature"
                },
                "input.stream.verbose": {
                    "type": "number",
                    "default": 0,
                    "description": "The verbosity level for extra diagnostics"
                },
                "input.stream.api.address": {
                    "type": "string",
                    "default": "api.input.stream:443",
                    "description": "Address of the API server"
                },
                "input.stream.baseDir": {
                    "type": "string",
                    "default": "~/.inputstream",
                    "description": "Base directory to stage input files"
                }
            }
        },
        "commands": [
            {
                "category": "Stream",
                "command": "input.stream.openExtensionSetting",
                "title": "Goto Extension Setting"
            },
            {
                "category": "Stream",
                "command": "input.stream.inputExplorer.refresh",
                "title": "Refresh Pages",
                "icon": "$(refresh)"
            },
            {
                "category": "Stream",
                "command": "input.stream.input.publish",
                "title": "Publish Page",
                "icon": "$(rss)"
            },
            {
                "category": "Stream",
                "command": "input.stream.input.unpublish",
                "title": "Unpublish Page",
                "icon": "$(shield)"
            },
            {
                "category": "Stream",
                "command": "input.stream.image.search",
                "title": "Unsplash Image Search",
                "icon": {
                    "dark": "media/unsplash-dark.svg",
                    "light": "media/unsplash-light.svg"
                }
            },
            {
                "category": "Stream",
                "command": "input.stream.image.upload",
                "title": "Upload Image",
                "icon": "$(upload)"
            },
            {
                "category": "Stream",
                "command": "input.stream.input.create",
                "title": "Create New Page...",
                "icon": "$(add)"
            },
            {
                "category": "Stream",
                "command": "input.stream.input.watch",
                "title": "Watch Page Changes (In Browser)",
                "icon": "$(eye-watch)"
            },
            {
                "category": "Stream",
                "command": "input.stream.input.replace",
                "title": "Replace Input in File Explorer (internal command)"
            },
            {
                "category": "Stream",
                "command": "input.stream.input.delete",
                "title": "Delete Page",
                "icon": "$(trash)"
            },
            {
                "category": "Stream",
                "command": "input.stream.login",
                "title": "Login to https://input.stream",
                "icon": "$(log-in)"
            },
            {
                "category": "Stream",
                "command": "input.stream.deviceLogin",
                "title": "Login to https://input.stream",
                "icon": "$(log-in)"
            }
        ],
        "keybindings": [
            {
                "command": "input.stream.inputExplorer.refresh",
                "key": "ctrl+shift+cmd+l"
            },
            {
                "command": "workbench.view.extension.inputstream-explorer",
                "key": "ctrl+shift+cmd+i",
                "title": "Reveal input.stream Explorer"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "input.stream.openExtensionSetting",
                    "when": "false"
                },
                {
                    "command": "input.stream.input.replace",
                    "when": "false"
                }
            ],
            "view/title": [
                {
                    "command": "input.stream.inputExplorer.refresh",
                    "when": "view == input.stream.inputExplorer",
                    "group": "navigation@0"
                },
                {
                    "command": "input.stream.input.create",
                    "when": "view == explorer && resourceScheme == stream",
                    "group": "navigation@1"
                },
                {
                    "command": "input.stream.deviceLogin",
                    "when": "view == input.stream.accountExplorer",
                    "group": "navigation@0"
                }
            ],
            "explorer/context": [
                {
                    "command": "input.stream.input.publish",
                    "when": "resourceScheme == stream && resourceFilename =~ /.draft.md$/"
                },
                {
                    "command": "input.stream.input.unpublish",
                    "when": "resourceScheme == stream && resourceFilename =~ /.published.md$/"
                },
                {
                    "command": "input.stream.input.create"
                }
            ],
            "editor/context": [
                {
                    "command": "input.stream.image.search",
                    "when": "editorTextFocus && resourceScheme == stream",
                    "group": "4_search"
                },
                {
                    "command": "input.stream.input.create",
                    "group": "7_modification"
                },
                {
                    "command": "input.stream.input.publish",
                    "group": "7_modification",
                    "when": "resourceScheme == stream && resourceFilename =~ /.draft.md$/"
                },
                {
                    "command": "input.stream.input.unpublish",
                    "group": "7_modification",
                    "when": "editorTextFocus && resourceScheme == stream && resourceFilename =~ /.published.md$/"
                },
                {
                    "command": "input.stream.input.watch",
                    "group": "7_modification",
                    "when": "editorTextFocus && resourceScheme == stream"
                },
                {
                    "command": "input.stream.input.delete",
                    "group": "8_modification",
                    "when": "editorTextFocus && resourceScheme == stream"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "inputstream-explorer",
                    "title": "Stream 0.8.1",
                    "icon": "media/astronaut.svg"
                }
            ]
        },
        "views": {
            "inputstream-explorer": [
                {
                    "id": "input.stream.inputExplorer",
                    "name": "Inputs",
                    "icon": "media/astronaut.svg",
                    "contextualTitle": "Input List"
                },
                {
                    "id": "input.stream.accountExplorer",
                    "name": "Account",
                    "icon": "media/astronaut.svg",
                    "contextualTitle": "Account Details"
                }
            ]
        }
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish:webpack": "npm run clean && webpack --mode production",
        "vscode:prepublish": "npm run clean && npm run compile",
        "vscode-package": "vsce package --out out/extension.vsix",
        "install-extension": "npm run vscode-package && code --install-extension out/extension.vsix",
        "uninstall-extension": "code --uninstall-extension stackbuild.vscode-inputstream",
        "webpack": "npm run clean && webpack --mode development",
        "watch": "tsc -watch -p ./",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts --ignore-pattern 'src/proto/**/*.ts' --fix",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js",
        "clean": "rimraf out/",
        "genproto": "node ./node_modules/@grpc/proto-loader/build/bin/proto-loader-gen-types.js --defaults --oneofs --verbose --includeComments -O ./src/proto --grpcLib @grpc/grpc-js proto/*.proto"
    },
    "dependencies": {
        "@grpc/grpc-js": "1.8.1",
        "@grpc/proto-loader": "0.7.4",
        "fs-extra": "9.0.1",
        "google-auth-library": "6.1.0",
        "luxon": "1.24.1",
        "protobufjs": "6.10.1",
        "vscode-common": "1.50.0",
        "vscode-extension-telemetry": "^0.1.6"
    },
    "devDependencies": {
        "@octokit/types": "5.2.0",
        "@types/chai-string": "1.4.2",
        "@types/chai": "4.2.12",
        "@types/fs-extra": "9.0.1",
        "@types/glob": "^7.1.1",
        "@types/graceful-fs": "4.1.2",
        "@types/luxon": "1.24.3",
        "@types/mkdirp": "0.5.2",
        "@types/mocha": "^7.0.2",
        "@types/node": "^16.11.7",
        "@types/rimraf": "2.0.2",
        "@types/tmp": "^0.2.3",
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^5.48.2",
        "@typescript-eslint/parser": "^5.48.2",
        "chai-string": "1.5.0",
        "chai": "4.2.0",
        "eslint": "^8.32.0",
        "glob": "^7.1.6",
        "graceful-fs": "4.2.4",
        "mocha": "^7.1.2",
        "rimraf": "3.0.2",
        "tmp": "^0.2.1",
        "typescript": "^4.8.4",
        "vscode-test": "^1.6.1",
        "webpack": "^4.44.2"
    }
}